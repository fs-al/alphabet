<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Alphabet</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">
</head>

<body>

  <h1 id="title">Alphabet</h1>
  <div class="set">
    <button class="big_tile"> <%= assignedLetter %> </a></button>
    <div class="soundIcons">
      <button class="soundIcon" onclick="playLetterName()"><i class="fa-solid fa-a fa-2xl"></i></button>
      <button class="soundIcon" onclick="playLetterSound()"><i class="fa-solid fa-volume-high fa-2xl"></i></button>
    </div>
      
  </div>

  <footer>
    <div class="set">
      <form action="/home" method="post">
      <button class="homeButton" type="submit">Main Page</a></button>
      </form>
    </div>
  </footer>
  <script src="https://kit.fontawesome.com/c409f0a65a.js" crossorigin="anonymous"></script>
  <script src="app.js"></script>

  <script>
    function playLetterName() {
      let audio = new Audio("/sounds/letterName/<%= assignedLetter %>.mp3");
      audio.play();
    }

    function playLetterSound() {
      let audio = new Audio("/sounds/letterSound/<%= assignedLetter %>.mp3");
      audio.play();
    }
  </script>
</body>

</html>
